<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/contentRowFav"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/favoriteSongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textStyle="normal"
                android:textSize="17sp"
                android:text="Anjunadeep"
                android:paddingRight="10dp"
                android:paddingBottom="-5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"/>

            <TextView
                android:id="@+id/favoriteSongArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favoriteSongTitle"
                android:textColor="@color/colorGrey"
                android:textStyle="normal"
                android:textSize="17sp"
                android:text="Anjuna"
                android:paddingRight="10dp"
                android:paddingBottom="-5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"/>

            <CheckBox
                android:id="@+id/favoriteFavorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:button="@drawable/favorite_fav_checkbox"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>